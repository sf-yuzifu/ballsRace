<template>
  <div class="demo-page">
    <img src="/common/back.png" onclick="routeList" style="position: absolute;left: 6px; top: 6px;"/>
    <img src="/common/how.png" onclick="how" style="position: absolute;right: 6px; top: 6px;"/>
    <text class="title">滚珠赛道</text>
    <!-- 点击跳转详情页 -->
     <img class="btn" src="/common/start.png" onclick="routeDetail"/>
    <img src="/common/info.png" onclick="info" style="position: absolute;right: 6px; bottom: 6px;"/>
  </div>
</template>

<script>
import router from "@system.router"
import brightness from "@system.brightness"

export default {
  private: {},

  routeList() {
    router.back()
  },

  routeDetail() {
    router.push({
      uri: "/pages/detail"
    })
  },

  info() {
    router.push({
      uri: "/pages/about"
    })
  },

  how() {
    router.push({
      uri: "/pages/how"
    })
  },

  onReady() {
    brightness.setKeepScreenOn({
      keepScreenOn: false
    })
  },
}
</script>

<style>
.demo-page {
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 48px;
  text-align: center;
  font-weight: bold;
  color: #ffffff;
}

.btn {
  width: 80px;
  margin-top: 20px;
}
</style>